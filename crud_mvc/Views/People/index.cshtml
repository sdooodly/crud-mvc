@model IEnumerable<crud_mvc.Models.Person>

@{
    ViewData["Title"] = "People List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<style>
    .table tbody tr {
        background-color: #f5f5dc; /* Pale brown color */
    }
    /* Add some subtle borders for better definition */
    .table th, .table td {
        border: 1px solid #ddd; 
        padding: 8px;
    }

    .table {
        width: 100%;
        border-collapse: collapse; 
    }
</style>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Name</td>
                <td>@person.Email</td>
                <td>@person.PhoneNumber</td>
            </tr>
        }
    </tbody>
</table>